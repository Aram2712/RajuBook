<title><%- title%></title>
<link rel="stylesheet" href="/css/confirmBalance.css">
<link rel="icon" href="/logos/logoMain.svg">
<body>


<div class="login-box">
    <h2><%- title%></h2>
    <form action="/confirm_balance" method="post">
        <input type="hidden" value="<%- result.id%>" name="id">
        <div class="user-box">
            <input type="text" value="<%- result.fullName%>" name="fullName" disabled>
        </div>
        <div class="user-box">
            <input type="text" value="<%- result.email%>" name="email" disabled>
        </div>
        <div class="user-box">
            <input type="txt" value="<%- result.balance%>" name="balance">
        </div>

        <input type="submit" value="Confirm" class="submit">
    </form>
</div>


</body>